model Calendar {
  id          String  @id @default(uuid())
  name        String
  description String?
  color       String  @default("#FF8400")
  isDefault   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id])

  events Event[]

  @@map("calendars")
}
