{
  "compilerOptions": {
    "target": "ES2021",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "noEmit": true,

    "outDir": "dist",

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist", "docs"]
}
